extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? Don't worry, here is your new password. You can sign in using this password now.

  p.new-password #{newPassword}

  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Go to login
  p If you didn't forget your password, please ignore this email!
